    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.18.0",
    "graphql": "^16.8.1",
    "grpc-tools": "^1.12.4",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.0",
